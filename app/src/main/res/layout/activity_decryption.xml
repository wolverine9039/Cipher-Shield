<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/decryptionScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="16dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txt_selected_encrypted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypted File: Not selected"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="#66000000"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_select_encrypted_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Encrypted File (.cyps)"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/txt_selected_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key File: Not selected"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="#66000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_select_key_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Key File (.txt)"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_decrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decrypt"
            android:textAllCaps="false"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btn_preview_decrypted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preview Decrypted File"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:enabled="false" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Waiting for input..."
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="#66000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Home" />

            <View
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exit" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
