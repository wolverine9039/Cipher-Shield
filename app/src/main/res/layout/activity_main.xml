<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient">

    <!-- Logo Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Logo Icon -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_shield_lock"
            android:contentDescription="App Logo"
            app:tint="@android:color/white" />

        <!-- App Name -->
        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cipher Shield"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"/>

        <!-- Tagline -->
        <TextView
            android:id="@+id/txtTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Military-Grade File Protection"
            android:textSize="14sp"
            android:textColor="#B3FFFFFF"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light"/>

        <!-- Version Badge -->
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v2.0 Secure"
            android:textColor="@color/primary"
            app:chipBackgroundColor="@android:color/white"
            android:layout_marginTop="16dp"
            app:chipStrokeWidth="0dp"/>

    </LinearLayout>

    <!-- Progress Bar -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        app:indicatorColor="@android:color/white"
        app:trackColor="#33FFFFFF"
        app:trackThickness="3dp"
        android:indeterminate="true"/>

    <!-- Security Badge -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_verified"
             app:tint="#4CAF50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AES-256-GCM Encrypted"
            android:textSize="11sp"
            android:textColor="#B3FFFFFF"
            android:layout_marginStart="6dp"/>
    </LinearLayout>

</RelativeLayout>