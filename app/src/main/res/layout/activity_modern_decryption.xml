<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/imgUnlockAnimation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_unlock"
                android:visibility="visible"
                app:tint="@color/success" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Decrypt File"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="12dp"/>

        </LinearLayout>

        <!-- Encrypted File Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEncryptedFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’ Encrypted File"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:id="@+id/txtSelectedEncrypted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingBottom="12dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSelectEncrypted"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Select Encrypted File"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_folder"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Key File Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardKeyFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”‘ Decryption Key"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingBottom="12dp"/>

                <TextView
                    android:id="@+id/txtSelectedKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No key selected"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingBottom="12dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSelectKey"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Select Key File"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_key"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Decrypt Action Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Status Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingBottom="16dp">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progressBar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone"
                        app:indicatorSize="24dp"
                        app:trackThickness="3dp"/>

                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:paddingStart="8dp"
                        android:textStyle="italic"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecrypt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ”“ Decrypt File"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:enabled="false"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Actions Card (appears after decryption) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/success"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âœ“ Decryption Complete"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/success"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipVerified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verified"
                        android:visibility="gone"
                        android:backgroundTint="#E6FFFA"
                        android:textColor="@color/success"
                        app:chipStrokeColor="@color/success"
                        app:chipStrokeWidth="1dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipWarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unverified"
                        android:visibility="gone"
                        android:backgroundTint="#FFF5F5"
                        android:textColor="@color/warning"
                        app:chipStrokeColor="@color/warning"
                        app:chipStrokeWidth="1dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtVerificationStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:paddingBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your file has been decrypted successfully."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingBottom="16dp"
                    android:lineSpacingExtra="2dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveDecrypted"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ’¾ Save Decrypted File"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_save"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.Button"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPreview"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ‘ Preview File"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Security Notice -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFF9E5"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”"
                    android:textSize="24sp"
                    android:paddingEnd="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Preview files are temporarily stored in cache and automatically deleted for security."
                    android:textSize="12sp"
                    android:textColor="#8B6914"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>